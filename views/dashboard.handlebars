<div class="dashboard-container">
  <h3 class="dashboard-title"> YOUR PREVIOUS BLOGS:</h3>

  {{#each allUsersBlogs as |blog|}}
  <div class="dashboard-blog">
  <a class="dashboard-link" href="/update/{{blog.id}}" >
    <h5 class="card-header">{{blog.title}} </h5>
    <div class="card-body">
      <h5 class="card-title">{{blog.user_name}}</h5>
      <p class="card-text">{{blog.contents}}</p>
      <p> Posted on: {{ format_date createdAt}}</p>
      {{!-- <a href="#" class="btn btn-primary">Go somewhere</a> --}}
    </div>
  </a>
  </div>
  {{/each}}


<br>
<div class="add-blog">
<form id="BlogBar">
  <div class="form-group">
    <h3>Add a new Blog</h3>
    <input type="text" class="form-control" id="blogTitle" placeholder="Blog Title">
  </div>
    <div class="form-group">
    <textarea type="text" class="form-control" id="blogText" placeholder="Blog Content"></textarea>
  </div>
  <button type="submit" class="btn btn-primary d-flex justify-content-center center">Submit</button>
</form>
</div>
</div>
<script src="/js/newBlog.js"></script>